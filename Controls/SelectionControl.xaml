<UserControl x:Class="DiplomProject.Controls.SelectionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DiplomProject.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="10" Background="AliceBlue">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Content="Выберите модель:"/>
        <ComboBox Grid.Row="1" Name="ModelComboBox" Margin="20,5,20,10"/>

        <CheckBox Grid.Row="2" Name="UseDatabaseCheckBox" Content="Использовать БД" Margin="0,5,0,0" Checked="UseDatabaseCheckBox_Checked" Unchecked="UseDatabaseCheckBox_Unchecked"/>
        <ComboBox Grid.Row="3" Name="DbProviderComboBox" Margin="20,5,20,10" IsEnabled="False">
            <ComboBoxItem Tag="Json">JSON</ComboBoxItem>
            <ComboBoxItem Tag="DbContext">Entity Framework (DbContext)</ComboBoxItem>
        </ComboBox>

        <Label Grid.Row="4" Content="Опции:"/>
        <StackPanel Grid.Row="5" Margin="0,5,0,10">
            <CheckBox Name="GenerateViewModelCheckBox" Content="Создание ViewModel" Margin="0,2" Checked="GenerateViewModelCheckBox_Checked" Unchecked="GenerateViewModelCheckBox_Unchecked"/>
            <CheckBox Name="UseDataBindingCheckBox" Content="Используйте привязку данных" Margin="0,2" IsEnabled="False"/>
            <CheckBox Name="AddDialogCheckBox" Content="Добавить диалоговое окно" Margin="0,2"/>
            <Label Content="Кнопки:"/>
            <StackPanel Margin="20,0,0,0">
                <CheckBox Name="AddButtonAddingCheckBox" Content="Добавить кнопку добавления" Margin="0,2"/>
                <CheckBox Name="AddButtonEditCheckBox" Content="Добавить кнопку изменения" Margin="0,2"/>
                <CheckBox Name="AddButtonDeleteCheckBox" Content="Добавить кнопку удаления" Margin="0,2"/>
            </StackPanel>
            <Label Content="Методы:"/>
            <StackPanel Margin="20,0,0,0">
                <CheckBox Name="AddMethodAddingCheckBox" Content="Добавить метод добавления" Margin="0,2" IsEnabled="False"/>
                <CheckBox Name="AddMethodEditCheckBox" Content="Добавить метод изменения" Margin="0,2" IsEnabled="False"/>
                <CheckBox Name="AddMethodDeleteCheckBox" Content="Добавить метод удаления" Margin="0,2" IsEnabled="False"/>
            </StackPanel>
            
        </StackPanel>

        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Name="OkButton" Content="Ок" Width="80" Margin="0,0,10,0" Click="OkButton_Click"/>
            <Button Name="CancelButton" Content="Отмена" Width="80" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
